<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_request_view_form" model="ir.ui.view">
        <field name="name">purchase.request.view.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />
        <field name="arch" type="xml">
            <field name="state" position="before">
                <button
                    name="%(purchase_request_from_bom_contents.bom_to_request_action)d"
                    string="Add BOM Contents"
                    type="action"
                    invisible="not is_editable"
                />
            </field>
      </field>
    </record>
</odoo>
