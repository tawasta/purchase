<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase.menu_procurement_management" model="ir.ui.menu">
        <field name="sequence">2</field>
    </record>

    <record id="action_move_with_refunds" model="ir.actions.act_window">
        <field name="name">Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_in_invoice_tree" />
        <field name="search_view_id" ref="account.view_account_invoice_filter" />
        <field name="domain">[('move_type','in',('in_invoice', 'in_refund'))]</field>
        <field name="context">{'default_move_type': 'in_invoice'}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a vendor bill
          </p><p>
            Create invoices, register payments and keep track of the discussions with your vendors.
          </p>
        </field>
    </record>

    <menuitem
        id="menu_procurement_management_pending_invoice_top"
        action="purchase_menu_default_vendor_bills.action_move_with_refunds"
        parent="purchase.menu_purchase_root"
        name="Vendor Bills"
        sequence="1"
    />
</odoo>
