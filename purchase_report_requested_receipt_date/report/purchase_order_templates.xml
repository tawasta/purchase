<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_purchaseorder_document_receipt_date" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@t-if='o.date_order']" position="after">
            <div t-if="o.date_receipt_requested" class="col-3 bm-2">
                <strong>Requested Receipt Date:</strong>
                <p t-field="o.date_receipt_requested" class="m-0" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
            </div>
        </xpath>
    </template>
</odoo>
