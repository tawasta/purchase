<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.linked.sale.line.sorting</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='display_type']"
                position="before"
            >
                <field name="linked_sale_line_sequence" invisible="1" />
                <field name="linked_sale_line_id_number" invisible="1" />
                <field name="move_dest_ids" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
