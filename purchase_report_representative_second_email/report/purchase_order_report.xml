<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_purchaseorder_document"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <p t-field="o.user_id" position="after">
            <t t-if="o.user_id.representative_email">
                <p t-esc="o.user_id.representative_email" class="m-0" />
            </t>
        </p>
    </template>

    <template
        id="report_purchasequotation_document"
        inherit_id="purchase.report_purchasequotation_document"
    >
        <div id="informations" position="inside">
            <div t-if="o.user_id" class="col-auto mw-100 mb-2">
                <strong>Purchase Representative:</strong>
                <p t-field="o.user_id" class="m-0" />

                <t t-if="o.user_id.representative_email">
                    <p t-esc="o.user_id.representative_email" class="m-0" />
                </t>
            </div>
        </div>
    </template>
</odoo>
