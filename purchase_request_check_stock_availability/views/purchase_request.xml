<?xml version="1.0" ?>
<odoo>
    <record id="purchase_request_check_stock_avail_request_form" model="ir.ui.view">
        <field name="name">purchase.request.check.stock.avail.request.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />
        <field name="arch" type="xml">

            <xpath
                expr="//field[@name='line_ids']//tree//field[@name='product_id']"
                position="after"
            >
                <field name="hide_request_line" invisible="True" />
            </xpath>

            <field name="state" position="before">
                <button
                    type="object"
                    name="check_stock_availability"
                    string="Check Other Locations' Availability"
                    invisible="state in ['rejected', 'done']"
                />
            </field>

            <xpath expr="(//notebook/page)[1]" position="attributes">
                <attribute name="string">Products to Purchase</attribute>
            </xpath>

            <notebook position="inside">
                <page string="Products available in Other Locations">
                    <field name="availability_line_ids">
                        <tree create="false">
                            <field name="product_id" string="Product wanted" />
                            <field
                                name="analytic_distribution_rel"
                                string="Target Project"
                                widget="analytic_distribution"
                                groups="analytic.group_analytic_accounting"
                                options="{'product_field': 'product_id'}"
                            />
                            <field name="product_qty" />
                            <field name="product_uom_id" groups="uom.group_uom" />
                            <field name="qty_available" />
                            <field name="available_qty" optional="hide" />
                            <field name="available_uom_id" groups="uom.group_uom" />
                            <field name="location_id" />
                            <button
                                type="object"
                                name="create_transfer"
                                string="Transfer"
                            />
                        </tree>
                    </field>
                </page>
                <page
                    string="Created Transfers"
                    invisible="[(6, False, [])] in stock_picking_ids"
                >
                    <field name="stock_picking_ids">
                        <tree create="false">
                            <field name="name" />
                            <field name="location_id" string="Source Location" />
                            <field
                                name="location_dest_id"
                                string="Destination Location"
                            />
                            <field name="origin" string="Description" />
                            <field name="state" />
                        </tree>
                    </field>
                </page>
            </notebook>

        </field>
    </record>
</odoo>
