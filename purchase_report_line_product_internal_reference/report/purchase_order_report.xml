<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_purchasequotation_document"
        inherit_id="purchase.report_purchasequotation_document"
    >
        <xpath expr="//table[@class='table table-sm']/thead/tr/th[1]" position="before">
            <th name="product_default_code" class="text-left">
                <strong>Internal reference</strong>
            </th>
        </xpath>

        <td id="product" position="before">
            <td id="product_default_code" class="text-left">
                <span t-field="order_line.product_id.default_code" />
            </td>
        </td>
    </template>

    <template
        id="report_purchaseorder_document"
        inherit_id="purchase_report_orderlines.report_purchaseorder_document_orderlines"
    >
        <th name="th_description" position="before">
            <th name="th_internal_reference">
                <strong>Internal reference</strong>
            </th>
        </th>

        <td name="td_description" position="before">
            <td name="td_internal_reference">
                <span t-field="line.product_id.default_code" />
            </td>
        </td>
    </template>
</odoo>
