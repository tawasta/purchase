<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_purchaseorder_document_hs_code"
        inherit_id="purchase_report_orderlines.report_purchaseorder_document_orderlines"
        priority="60"
    >
        <xpath expr="//th[@name='th_description']" position="after">
            <th name="th_origin_country_id">
                <strong>Origin</strong>
            </th>
        </xpath>
        <xpath expr="//td[@name='td_description']" position="after">
            <td name="td_origin_country_id">
                <span t-field="line.product_id.origin_country_id.code" />
            </td>
        </xpath>
    </template>
</odoo>
