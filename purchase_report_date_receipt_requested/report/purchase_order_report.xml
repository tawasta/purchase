<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_purchaseorder_document_order_reference"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath
            expr="//div[@id='informations']//div[@t-if='o.user_id']"
            position="before"
        >
            <div t-if="o.date_receipt_requested" class="col-3 bm-2">
                <strong>Requested receipt date:</strong>
                <p
                    class="m-0"
                    t-field="o.date_receipt_requested"
                    t-options="{'format': 'dd.MM.yyyy'}"
                />
            </div>
        </xpath>
    </template>
</odoo>
