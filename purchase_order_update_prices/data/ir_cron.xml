<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data noupdate="1">
        <record id="ir_cron_update_purchase_order_line_prices" model="ir.cron">
            <field name="name">Update Purchase Order line prices</field>
            <field name="model_id" ref="model_purchase_order_line"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_purchase_order_prices()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number" eval="1"/>
            <field name="interval_type">days</field>
            <field name="numbercall" eval="-1"/>
            <field name="priority" eval="5"/>
            <field name="doall" eval="0"/>
            <!-- Set to inactive just in case the triggering of cron is not wanted -->
            <field name="active" eval="0"/>
        </record>
    </data>
</odoo>
