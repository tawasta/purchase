<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_purchasequotation_document"
        inherit_id="purchase.report_purchasequotation_document"
    >
        <xpath expr="//p[@t-if='o.partner_id.vat']" position="before">
            <t t-if="'business_id' in o.partner_id.fields_get()">
                <t t-if="o.partner_id.business_id">
                    <!-- Please do not remove span tags, other module(s) might use them -->
                    <span id="business_id_code">
                    Business ID: <span t-field="o.partner_id.business_id" />
                    </span>
                </t>
            </t>
        </xpath>
    </template>
    <template
        id="report_purchaseorder_document"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//p[@t-if='o.partner_id.vat']" position="before">
            <t t-if="'business_id' in o.partner_id.fields_get()">
                <t t-if="o.partner_id.business_id">
                    <!-- Please do not remove span tags, other module(s) might use them -->
                    <span id="business_id_code">
                    Business ID: <span t-field="o.partner_id.business_id" />
                    </span>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
