<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_purchasequotation_document"
        inherit_id="purchase_report_line_product_internal_reference.report_purchasequotation_document"
        priority="101"
    >
        <xpath
            expr="//td[@id='product']//span[@name='span_default_code']"
            position="replace"
        />

        <!--
        Modify formatting so that the end result is the following (when supplierinfo is set for the product)

        [SUPP-CODE] Supplier Product Name
        Our code: [OUR-CODE] Our Product Name
        -->
        <xpath expr="//td[@id='product']" position="inside">
            <!-- Check if supplier specific code or name set-->
            <t
                t-if="(order_line.product_supplier_code or order_line.product_supplier_name) and o.company_id.purchase_report_line_internal_reference_position == 'single_column'"
            >
                <span
                    class="own-product-internal-reference-and-name fst-italic text-muted"
                >
                    <br />
                    Our code: [<span t-esc="order_line.product_id.default_code" />]
                    <span t-esc="order_line.product_id.name" />
                </span>
            </t>
        </xpath>

    </template>
</odoo>
