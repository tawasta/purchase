<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@id='informations']" position="after">
            <t t-set="show_purchase_header" t-value="request.env['ir.config_parameter'].sudo().get_param('purchase.show_purchase_header')"/>
            <div t-if="o.header_text and show_purchase_header" id="header-text">
                <h4 t-field="o.header_text" class="pt-4"/>
                <br/>
            </div>
        </xpath>
    </template>
    <template id="report_purchasequotation_document" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//div[@class='page']//table[@class='table table-sm']" position="before">
            <t t-set="show_purchase_header" t-value="request.env['ir.config_parameter'].sudo().get_param('purchase.show_purchase_header')"/>
            <div t-if="o.header_text and show_purchase_header" id="header-text">
                <h4 t-field="o.header_text" class="pt-4"/>
                <br/>
            </div>
        </xpath>
    </template>
</odoo>
