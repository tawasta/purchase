<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.always.show.hs.code.purchase</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="purchase.res_config_settings_view_form_purchase"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='auto_receipt_reminder']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="always_show_hs_code">
                    <div class="o_setting_left_pane">
                        <field name="always_show_hs_code" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="always_show_hs_code" />
                        <div class="text-muted">
                            Always show HS code on print
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box" id="use_po_line_hs_code">
                    <div class="o_setting_left_pane">
                        <field name="use_po_line_hs_code" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="use_po_line_hs_code" />
                        <div class="text-muted">
                            Use HS codes directly from PO lines
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
