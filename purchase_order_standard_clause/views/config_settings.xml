<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.purchase.standard.clause</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="purchase.res_config_settings_view_form_purchase"
        />
        <field name="arch" type="xml">

            <setting id="auto_receipt_reminder" position="after">
                <setting
                    id="manage_order_standard_clause"
                    help="Set a default clause for purchase orders"
                >
                    <field name="purchase_order_standard_clause" />
                </setting>
            </setting>

        </field>
    </record>
</odoo>
