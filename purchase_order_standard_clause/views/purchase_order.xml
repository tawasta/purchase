<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_standard_clause_purchase_form" model="ir.ui.view">
        <field name="name">purchase.order.description.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[2]/group[1]" position="inside">
                <group string="Standard clause">
                    <field name="standard_clause" nolabel="1" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
