<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_purchasequotation_document" inherit_id="purchase.report_purchasequotation_document">
        <div id="informations" position="inside">
            <div t-if="o.payment_term_id" class="col-auto mw-100 mb-2">
                <strong>Payment terms:</strong>
                <p class="m-0" t-field="o.payment_term_id"/>
            </div>
        </div>
    </template>
    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <div id="informations" position="inside">
            <div t-if="o.payment_term_id" class="col-auto mw-100 mb-2">
                <strong>Payment terms:</strong>
                <p class="m-0" t-field="o.payment_term_id"/>
            </div>
        </div>
    </template>
</odoo>
