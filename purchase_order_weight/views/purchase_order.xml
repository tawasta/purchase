<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.weight</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="model">purchase.order</field>
        <field name="arch" type="xml">
            <xpath
                expr="//group[contains(@class, 'oe_subtotal_footer')]"
                position="after"
            >
                <group name="purchase_weight_group" groups="base.group_user">
                    <label for="weight" />
                    <div class="o_row mr16" id="order-weight">
                        <field name="weight" />kg
                    </div>
                </group>
            </xpath>

            <xpath
                expr="//field[@name='order_line']//tree/field[@name='product_qty']"
                position="after"
            >
                <field name="weight" />
            </xpath>
        </field>
    </record>
</odoo>
